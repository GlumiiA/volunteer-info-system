<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="005-create-reviews-table" author="Aigul">
        <createTable tableName="reviews">
            <column name="id" type="SERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="reviewer_id" type="INTEGER">
                <constraints foreignKeyName="fk_reviews_reviewer" 
                             references="users(id)" 
                             deleteCascade="true"/>
            </column>
            <column name="reviewed_id" type="INTEGER">
                <constraints foreignKeyName="fk_reviews_reviewed" 
                             references="users(id)" 
                             deleteCascade="true"/>
            </column>
            <column name="event_id" type="INTEGER"/>
            <column name="rating" type="FLOAT"/>
            <column name="content" type="TEXT"/>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="idx_reviews_reviewer_id" tableName="reviews">
            <column name="reviewer_id"/>
        </createIndex>
        
        <createIndex indexName="idx_reviews_reviewed_id" tableName="reviews">
            <column name="reviewed_id"/>
        </createIndex>
        
        <createIndex indexName="idx_reviews_event_id" tableName="reviews">
            <column name="event_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
