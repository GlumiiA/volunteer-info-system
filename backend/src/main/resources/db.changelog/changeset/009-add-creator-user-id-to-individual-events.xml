<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="009-add-creator-user-id-to-individual-events" author="system">
        <addColumn tableName="individual_events">
            <column name="creator_user_id" type="INTEGER">
                <constraints nullable="true"
                             foreignKeyName="fk_individual_events_creator_user" 
                             references="users(id)" 
                             deleteCascade="true"/>
            </column>
        </addColumn>

        <createIndex indexName="idx_individual_events_creator_user_id" tableName="individual_events">
            <column name="creator_user_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
