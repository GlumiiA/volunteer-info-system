<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="008-create-organization-role-requests-table" author="Aigul">
        <createTable tableName="organization_role_requests">
            <column name="id" type="SERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="INTEGER">
                <constraints nullable="false"
                             foreignKeyName="fk_org_role_requests_user"
                             references="users(id)"
                             deleteCascade="true"/>
            </column>
            <column name="request_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="organization_id" type="INTEGER">
                <constraints foreignKeyName="fk_org_role_requests_organisation"
                             references="organisations(id)"
                             deleteCascade="true"/>
            </column>
            <column name="organization_name" type="VARCHAR(255)"/>
            <column name="organization_description" type="TEXT"/>
            <column name="organization_address" type="VARCHAR(500)"/>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="idx_org_role_requests_user" tableName="organization_role_requests">
            <column name="user_id"/>
        </createIndex>

        <createIndex indexName="idx_org_role_requests_status" tableName="organization_role_requests">
            <column name="status"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
