<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="004-create-mass-events-table" author="Aigul">
        <createTable tableName="mass_events">
            <column name="id" type="SERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="organisation_id" type="INTEGER">
                <constraints nullable="false" 
                             foreignKeyName="fk_mass_events_organisation" 
                             references="organisations(id)" 
                             deleteCascade="true"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="date_start" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="date_end" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="work_hours" type="FLOAT"/>
            <column name="address" type="VARCHAR(500)"/>
            <column name="volunteers_required" type="INTEGER"/>
            <column name="age_restriction" type="INTEGER"/>
        </createTable>

        <createIndex indexName="idx_mass_events_organisation_id" tableName="mass_events">
            <column name="organisation_id"/>
        </createIndex>
        
        <createIndex indexName="idx_mass_events_date_start" tableName="mass_events">
            <column name="date_start"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
