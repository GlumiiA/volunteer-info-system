<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="006-create-volunteer-book-entries-table" author="Aigul">
        <createTable tableName="volunteer_book_entries">
            <column name="id" type="SERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="INTEGER">
                <constraints nullable="false" 
                             foreignKeyName="fk_volunteer_book_entries_user" 
                             references="users(id)" 
                             deleteCascade="true"/>
            </column>
            <column name="event_id" type="INTEGER">
                <constraints nullable="false" 
                             foreignKeyName="fk_volunteer_book_entries_event" 
                             references="mass_events(id)" 
                             deleteCascade="true"/>
            </column>
            <column name="content" type="TEXT"/>
            <column name="completed_at" type="TIMESTAMP WITH TIME ZONE"/>
        </createTable>

        <createIndex indexName="idx_volunteer_book_entries_user_id" tableName="volunteer_book_entries">
            <column name="user_id"/>
        </createIndex>
        
        <createIndex indexName="idx_volunteer_book_entries_event_id" tableName="volunteer_book_entries">
            <column name="event_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
